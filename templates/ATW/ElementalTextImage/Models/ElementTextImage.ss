<section class="section section--textimage <% if $Style %>$CssStyle<% end_if %>">
    <div class="section_content">
        <% if $ShowTitle %>
            <h2>$Title</h2>
        <% end_if %>
        <div class="section_items">
            <div class="text">
                $Text
            </div>

            <div class="image">
                $Image
            </div>

        </div>
    </div>
</section>
